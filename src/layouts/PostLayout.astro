---
const { title } = Astro.props;
import PostHeader from "../components/PostHeader.astro";
import "katex/dist/katex.min.css";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light">
    <meta name="theme-color" content="#050505" media="(prefers-color-scheme: dark)">
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <main class="mx-auto w-full max-w-3xl px-4 py-10">
    <PostHeader />
    <article class="prose prose-zinc max-w-none dark:prose-invert">
      <!-- <h1 class="!mb-4">{title}</h1> -->
      <slot />
    </article>
  </main>
</html>

<style is:global>
  @media (prefers-color-scheme: dark) {
    html, body { background:#050505; color:#e5e7eb;}
    .prose { --tw-prose-body: #e5e7eb; --tw-prose-headings:#fff; --tw-prose-links: var(--link);
             --tw-prose-code:#e5e7eb; --tw-prose-pre-bg:#0b0b0b; --tw-prose-hr:#27272a; }
  }
  @media (prefers-color-scheme: light) {
    html, body { background:#ffffff; color:#0a0a0a; }
    .prose { --tw-prose-body: #0a0a0a; --tw-prose-headings:#111; --tw-prose-links: var(--link);
             --tw-prose-code:#111; --tw-prose-pre-bg:#f6f6f7; --tw-prose-hr:#e5e7eb; }
  }

  :root {
    color-scheme: light dark;
    --link:#1e90ff; --resalt:#95c200; --resalt2:#d00007; --resalt3:#df7b00;
  }

  html { font-family: 'JetBrains Mono Variable', monospace; }
  body { display:flex; flex-direction:column; min-height:100vh; }
</style>
